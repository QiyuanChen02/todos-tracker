{
	"name": "activity-tracker",
	"displayName": "activity-tracker",
	"description": "Tracks your VSCode activity",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.104.0"
	},
	"type": "module",
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "activity-tracker.openStats",
				"title": "Open Stats"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.104.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.34.0",
		"typescript": "^5.9.2"
	},
	"packageManager": "yarn@3.8.7",
	"dependencies": {
		"@webview-rpc/host": "^1.0.7",
		"zod": "^4.1.11"
	}
}
