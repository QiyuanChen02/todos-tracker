{
	"name": "todos-tracker",
	"displayName": "Todos Tracker",
	"description": "A modern Kanban board and calendar for managing your coding tasks directly inside Visual Studio Code",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.104.0"
	},
	"type": "module",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"icon": "newlogo.png",
	"publisher": "qiyuanchen",
	"repository": {
		"type": "git",
		"url": "https://github.com/QiyuanChen02/todos-tracker.git"
	},
	"contributes": {
		"commands": [
			{
				"command": "todos-tracker.openTodos",
				"title": "Open Todos"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run build-webview",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"upgrade-wrpc": "npm up @webview-rpc/host && cd webview && npm up @webview-rpc/client @webview-rpc/react-query && cd ..",
		"build-webview": "cd webview && npm run build && cd .."
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.104.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.38.0",
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@1.22.22",
	"dependencies": {
		"@vscode/codicons": "^0.0.41",
		"@webview-rpc/host": "^1.0.17",
		"zod": "^4.1.12"
	}
}
