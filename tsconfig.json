{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true /* enable all strict type-checking options */,

		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*" // IMPORTANT: Only include files in the src directory
	],
	"exclude": [
		"webview", // Explicitly exclude the webview directory
		"node_modules"
	]
}
