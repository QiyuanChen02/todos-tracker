---
interface Props {
  title: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
  bullets: Array<{ text: string; color: string }>;
  gradient: string;
  glowGradient: string;
  reverse?: boolean;
}

const {
  title,
  description,
  imageSrc,
  imageAlt,
  bullets,
  gradient,
  glowGradient,
  reverse = false,
} = Astro.props;

// Todo: modify colors as needed
const colorMap: Record<string, string> = {
  blue: "#3b82f6",
  purple: "#a855f7",
  pink: "#ec4899",
  cyan: "#06b6d4",
  green: "#10b981",
};
---

<div
  class:list={[
    "grid lg:grid-cols-2 gap-12 items-center",
    reverse && "lg:flex-row-reverse lg:flex",
  ]}
>
  <div class="relative">
    <div class={`absolute inset-0 ${glowGradient} blur-2xl`}></div>
    <div
      class="relative rounded-2xl border border-white/10 overflow-hidden shadow-2xl"
    >
      <img src={imageSrc} alt={imageAlt} loading="lazy" class="w-full" />
    </div>
  </div>
  <div>
    <h3
      class={`text-4xl font-bold mb-4 ${gradient} bg-clip-text text-transparent`}
    >
      {title}
    </h3>
    <p class="text-lg text-gray-400 mb-6">{description}</p>
    <ul class="space-y-3">
      {
        bullets.map((bullet) => (
          <li class="flex items-center gap-3">
            <div
              class="w-2 h-2 rounded-full"
              style={`background-color: ${colorMap[bullet.color] || bullet.color}`}
            />
            <span class="text-gray-300">{bullet.text}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
