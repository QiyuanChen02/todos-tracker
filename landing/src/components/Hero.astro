<section class="pt-32 pb-20 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 animate-fade-in">
      <h1
        class="text-6xl md:text-7xl font-bold mb-6 bg-linear-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent"
      >
        Stay Organised.<br />Code Smarter.
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-8">
        A modern Kanban board and calendar for managing your coding tasks
        directly inside Visual Studio Code.
      </p>
      <div class="flex items-center justify-center gap-4">
        <a
          href="https://marketplace.visualstudio.com/items?itemName=qiyuanchen.todos-tracker"
          target="_blank"
          class="px-8 py-4 bg-linear-to-r from-blue-500 to-purple-600 rounded-lg font-semibold text-lg hover:shadow-xl hover:shadow-purple-500/50 transition-all transform hover:scale-105"
        >
          Download Extension
        </a>
        <a
          href="#showcase"
          class="px-8 py-4 bg-white/10 rounded-lg font-semibold text-lg hover:bg-white/20 transition-all backdrop-blur-sm"
        >
          See It in Action
        </a>
      </div>
    </div>

    <!-- Hero Visual -->
    <div class="relative">
      <div
        class="absolute inset-0 bg-linear-to-r from-blue-500/20 to-purple-500/20 blur-3xl -z-10"
      >
      </div>
      <div
        class="rounded-2xl border border-white/10 overflow-hidden shadow-2xl"
      >
        <img
          id="kanban-demo-img"
          src="/assets/kanbanframe0.png"
          alt="Kanban Board Demo"
          class="w-full"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<script>
  // Swap static image for GIF when the image is scrolled into view
  document.addEventListener("DOMContentLoaded", () => {
    const img = document.getElementById(
      "kanban-demo-img"
    ) as unknown as HTMLImageElement | null;

    let swapped = false;
    function onScroll() {
      if (swapped) return;
      if (!img) return;
      const rect = img.getBoundingClientRect();
      if (rect.top < window.innerHeight && rect.bottom > 0) {
        img.src = "/assets/showcasekanban.gif";
        swapped = true;
        window.removeEventListener("scroll", onScroll);
      }
    }

    window.addEventListener("scroll", onScroll, { passive: true });
    // In case it's already in view on load
    onScroll();
  });
</script>
